{
  "name": "logger-diary",
  "version": "0.0.1",
  "description": "An easy-to-use diary program.",
  "main": "main.js",
  "homepage": "https://mar-on-github.github.io/logger-diary/",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --no-asar --icon=icons/logo.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . Logger-Diary --overwrite --no-asar --platform=win32 --arch=x64 --icon=icons/logo.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Logger-Diary\"",
    "prepackage-linux": "electron-packager . Logger-Diary --overwrite --executableName=logger-diary --no-asar --platform=linux --arch=x64 --icon=icons/logo.png --prune=true --out=release-builds",
    "package-deb64": "electron-installer-debian --src release-builds/Logger-Diary-linux-x64/ --dest release-builds/installers/ --arch amd64"
  },
  "repository": "https://github.com/mar-on-github/logger-diary/",
  "author": "MLC Bloeiman",
  "license": "MIT",
  "dependencies": {
    "php-server-manager": "^1.2.1"
  },
  "devDependencies": {
    "electron": "^18.2.4",
    "electron-packager": "^15.5.1",
    "php-server-manager": "^1.2.1",
    "electron-installer-debian": "^3.0.0"
  }
}
